@using DayPilot.Web.Mvc;
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
</div>

<script src="@Url.Content("~/Scripts/DayPilot/daypilot-all.min.js")" type="text/javascript"></script>

@Html.DayPilotCalendar("Calendar", new DayPilotCalendarConfig
{
    BackendUrl = Url.Action("Backend"),
    ViewType = DayPilot.Web.Mvc.Enums.Calendar.ViewType.Day,
    BusinessBeginsHour = 8,
    BusinessEndsHour = 17,
    CellHeight = 70,
    HourWidth = 100,
    HeaderHeight = 20,
    TimeRangeSelectedHandling = DayPilot.Web.Mvc.Events.Calendar.TimeRangeSelectedHandlingType.JavaScript,
    TimeRangeSelectedJavaScript = "Calendar.timeRangeSelectedCallBack(start, end, null, { name: prompt('New Event Name:', 'New Event') });"
});